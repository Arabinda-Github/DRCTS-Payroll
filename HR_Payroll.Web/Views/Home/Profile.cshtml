@using Microsoft.AspNetCore.Http
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userTypeId = 0;
    var cookies = 0;
    var role = string.Empty;
    var name = string.Empty;
    var email = string.Empty;
    var mobile = string.Empty;
    var dept = string.Empty;
    var design = string.Empty;
    var claims = HttpContextAccessor?.HttpContext?.User.Claims.ToList();
    if (claims.Count > 0)
    {
        cookies = 1;
        userTypeId = Convert.ToInt32(claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value);
        role = claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        name = claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value;
        email = claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value;
        mobile = claims.FirstOrDefault(c => c.Type == ClaimTypes.MobilePhone)?.Value;
        dept = claims.FirstOrDefault(c => c.Type == "Department")?.Value;
        design = claims.FirstOrDefault(c => c.Type == "Designation")?.Value;
    }
}

